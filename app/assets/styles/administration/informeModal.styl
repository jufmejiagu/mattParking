.informeModal
  position: absolute;
  min-height: calc(100% - 43px);
  top: 43px;
  width: 100%;
  z-index: 1;
  background-color: rgba(0, 0, 0, 0.90);
  color: white;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  font: 15px 'HelvNeueRoman', sans-serif;
  overflow-y: auto;

  h3
    font-family: 'BebasNeueRegular';
    font-size: 30px;

  .instructions
    font: 18px 'HelvNeueRoman', sans-serif;
    margin-top: 15px;

  .dataInformation
    background-color: white;
    display: flex;
    flex-direction: column;
    color: $mattelsaBlack;
    padding: 20px;

    .item
      display: flex;
      font-family: 'BebasNeueRegular';
      font-size: 20px;

      .itemName
        margin-left: 10px;

      .itemValue
        margin-left: 5px;
        color: $mattelsaGrayText;

  .error
    font-family: 'BebasNeueRegular';
    color: $mattelsaRed;
    margin-top: 10px;
    font-size: 20px;

  .buttonsContainer
    margin-top: 10px;

    button
      color: $mattelsaBlack;
      background-color: white;
      margin: 0px 5px 0px 5px;
      border: none;
      font: 13px 'HelvNeueRoman', sans-serif;
      text-transform: uppercase;

  table
    margin-top: 20px;
    border-collapse: collapse;
    th, td
      padding: 0.5rem;
      text-align: left;
      border: 1px solid white;

    tbody tr:nth-child(odd) {
      background: white;
      color: $mattelsaBlack;
    }
