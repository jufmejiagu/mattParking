.userTypeSelector
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  color: white;
  flex-direction: column;
  align-items: center;
  font-family: 'BebasNeueRegular';
  cursor: pointer;

  &:hover
    color: $mattelsaRed;
    img
      filter: grayscale(0%);

  h2
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-weight: 100;
    font-size: 30px;

  img
    filter: grayscale(100%);
    height: 200px;
    width: 200px;
    display: none;

  form
    display: flex;
    flex-direction: column;
    width: 50%;

    input
      border-radius: 5px;
      border: none;
      margin-bottom: 3px;


    button
      border-radius: 5px;
      margin-top: 10px;
      background-color: white;
      border:none
      &:hover
        background-color: $mattelsaRed;
        color: white;

  .error
    color: $mattelsaRed;
    margin-top: 10px;
    font-size: 20px;

@media screen and (min-height: 750px)
  .userTypeSelector
    img
      display: block;
