.loginContainer
  background-color: $mattelsaBlack;
  height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;

  .logo
    position: absolute;
    top: 10px;
    left: 20px;


@media screen and (min-width: 800px)
  .loginContainer
    flex-direction: row;

    .logo
      left: 50%;
      transform: translate(-50%,0);
