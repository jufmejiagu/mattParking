.shoppingCart
  background-color: $backgroundColor;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;

  .content
    height: 100%;
    overflow-y: auto;
    margin-bottom: 50px;
    margin-top: 48px;
    display: flex;
    flex-direction: column;

  .bottomBar

    button
      background-color: $principalActionColor;
      color: white;
      border: none;
      cursor: pointer;
      margin: 8px 7px 4px 7px;
      height: 39px;
      width: calc(100% - 14px);
      border-radius: 4px;
      font-size: 19.8px;
      font-weight: 200;
      line-height: 23px;

  .shoppingCartDetailContainer
    width: 100%
    margin-top: 10px;
    background-color: white;
    display: flex;
    flex-direction: column;
    padding-top: 5px;
    padding-bottom: 7px;

    hr
      width: 92%;
      margin-left: 4%;
      margin-top: 6px;
      margin-bottom: 4px;

    .item
      display: flex;
      justify-content: space-between;
      width: calc(100% - 30.6px);
      margin-left: 19.5px;
      color: $fontColor;

      .price
        font-size: 11px;
        line-height: 13px;

      .description
        font-size: 13px;

      .total
        color: $principalActionColor;
        font-size: 12px;
        letter-spacing: -0.1px;
        line-height: 14px;

  .shoppingCartBookListContainer
    color: $fontColor;
    margin-left: 11px;
    margin-top: 10px;
    width: calc(100% - 19px)

    .bookCardsContainer
      width: 100%;

  .deliveryPromo
    margin-top: 18px;
    display: flex;
    justify-content: center;
    text-align: center;
    font-family: Roboto;

    .noFree, .isFree
      font-size: 13px;

      span
        color: $fontColor;

      strong
        color: $principalActionColor;
        font-weight: 400;

  .suggestedBooksContainer
    display: flex;
    width: 306px;
    align-self: center;
    margin-bottom: 20px;
    flex-wrap: wrap;
    justify-content: space-between;
